{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "target": "es2020",
      "outDir": "./build",
      "baseUrl": "./src",
      "rootDir": "./src",
      "esModuleInterop": true,
      // "sourceMap": true,  
      // "pretty": true,     
      // "strict": true,
      "allowJs": true,
      "lib": ["es2020", "dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.mts", "src/**/*.js", "src/**/*.mjs"],
    "exclude": ["node_modules"]
  }
  